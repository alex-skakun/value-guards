{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "jsx": "react-jsx",
    "strict": true,
    "types": [
      "bun-types"
    ],
    "lib": [
      "ESNext"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.tsx",
    "**/*.spec.ts"
  ],
  "references": [
    {"path": "./tsconfig.build.json"},
    {"path": "./tsconfig.spec.json"}
  ]
}
